{
  "name": "matching-engine",
  "private": true,
  "version": "1.0.0",
  "description": "matching engine full-stack application with db persistence",
  "author": "Anne Oliver",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "NODE_ENV=test jest -runInBand",
    "client:dev": "webpack serve --mode development",
    "client:build": "webpack --mode production",
    "server:dev": "NODE_ENV=development nodemon server/api/server.js",
    "server:start": "NODE_ENV=production node server/api/server.js",
    "server:test": "NODE_ENV=test node server/api/server.js",
    "work:steady": "MODE=steady node server/performance/workloads.js",
    "work:steady:1e5": "MODE=steady N=100000 node server/performance/workloads.js",
    "work:walk": "MODE=walk-book node server/performance/workloads.js",
    "work:cancel": "MODE=cancel-heavy node server/performance/workloads.js",
    "work:single": "MODE=single-level node server/performance/workloads.js",
    "work:many": "MODE=many-levels node server/performance/workloads.js",
    "work:mixed": "MODE=mixed-types node server/performance/workloads.js",
    "fuzz": "node server/performance/fuzz.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "better-sqlite3-session-store": "^0.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pino": "^9.9.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.33.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "dotenv-webpack": "^8.1.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "style-loader": "^4.0.0",
    "supertest": "^7.1.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
